  <div class="form-field">
    <%= form.label :food_id, style: "display: block;" %>
    <%= form.select :food_id, options_for_select(Food.all.map { |food| [food.name, food.id] }) %>
  </div>

  <div class="form-field">
    <%= form.label :quantity, style: "display: block;" %>
