<div class="login-container">
  <h2 class="login-title">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
    <div class="form-field">
      <%= f.label :email, class: "input-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
    </div>

    <div class="form-field">
      <%= f.label :password, class: "input-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "input-field" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-field remember-field">
        <%= f.check_box :remember_me, class: "remember-checkbox" %>
        <%= f.label :remember_me, class: "remember-label" %>
      </div>
    <% end %>

    <div class="form-actions">
      <%= f.submit "Log in", class: "login-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
